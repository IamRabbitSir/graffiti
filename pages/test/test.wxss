
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
 
.navbar {
  flex: none;
  display: flex;
  background: #fff;
}
 
.navbar .item {
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
 
.navbar .item.active {
  color: red;
}
 
.navbar .item.active:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 4rpx solid red;
  transition: 0.2s all linear;
}
 
.navbar .item.active1:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 0;
  border-bottom: 4rpx solid red;
  transition: 0.2s all linear;
}



